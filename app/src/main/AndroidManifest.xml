<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="com.zjk.phonecall"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <application
        android:allowBackup="true"
        android:icon="@android:drawable/ic_menu_call"
        android:label="@string/app_name"
        android:theme="@style/Theme.DesignDemo">

        <activity
            android:name="com.zjk.phonecall.activity.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name="com.zjk.phonecall.activity.DetailActivity"/>
    </application>
    <provider android:name="com.zjk.phonecall.provider.ContactProvider" android:authorities="com.zjk.phonecall.provider.Contact" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_CALL_LOG"/>
    <uses-permission android:name="android.permission.WRITE_CALL_LOG"/>
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.PROCESS_OUTGOING_CALLS" />
</manifest>
