<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    android:baselineAligned="false"
    android:gravity="fill_vertical">

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dip"
        android:padding="15dip" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1" >

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="50dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="50dp" />
                </TableRow>
            </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/tableLayout1"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/relativeLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="150dp"
                    android:layout_margin="0dip"
                    android:padding="5dip" >

                    <TableLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:stretchColumns="1"
                        android:background="@drawable/dialog_div">

                        <EditText
                            android:id="@+id/userName_et"
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:layout_marginLeft="15px"
                            android:background="@drawable/shape"
                            android:gravity="center|left"
                            android:hint="  账号 "
                            android:singleLine="true" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="1dp"
                            android:id="@+id/imageView"
                            android:background="#29e435" />

                        <EditText
                            android:id="@+id/password_et"
                            android:layout_width="fill_parent"
                            android:layout_height="70dp"
                            android:layout_marginLeft="15px"
                            android:background="@drawable/shape"
                            android:gravity="center|left"
                            android:hint=" 密码 "
                            android:password="true"
                            android:textAllCaps="true" />

                    </TableLayout>
                </RelativeLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center">

                    <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="记住密码"
                        android:id="@+id/remember_sw"
                        android:checked="true"
                        android:clickable="false"
                        android:visibility="gone" />

                    <CheckBox
                        android:id="@+id/rememberPassword_cb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="记住密码"
                        android:layout_marginRight="20dp"
                        android:checked="false" />

                    <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="自动登陆"
                        android:id="@+id/autologin_sw"
                        android:checked="false"
                        android:visibility="gone" />

                    <CheckBox
                        android:id="@+id/autoLogin_cb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="自动登录"
                        android:checked="false"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center_horizontal|fill"
                    android:weightSum="1">

                    <Button
                        android:id="@+id/login_bt"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:background="@drawable/btn_selector"
                        android:text="登录"
                        android:textColor="#FFFFFF"
                        android:textSize="60px"
                        android:layout_weight="0.5" />

                    <Button
                        android:id="@+id/register_bt"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:background="@drawable/btn_selector"
                        android:text="注册"
                        android:textColor="#FFFFFF"
                        android:textSize="60px"
                        android:layout_weight="0.5" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>